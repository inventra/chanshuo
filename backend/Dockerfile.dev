FROM python:3.11.9-slim

# è¨­ç½®å·¥ä½œç›®éŒ„
WORKDIR /app

# è¨­ç½®é–‹ç™¼ç’°å¢ƒè®Šé‡
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PORT=8000 \
    TZ=Asia/Taipei \
    PYTHONPATH=/app

# å®‰è£ç³»çµ±ä¾è³´å’Œé–‹ç™¼å·¥å…·
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    curl \
    vim \
    git \
    tzdata \
    postgresql-client \
    && ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && echo $TZ > /etc/timezone \
    && rm -rf /var/lib/apt/lists/*

# å‰µå»ºæ‡‰ç”¨ç”¨æˆ¶å’Œç›®éŒ„
RUN useradd --create-home --shell /bin/bash dev_user && \
    mkdir -p /app/logs /app/uploads && \
    chown -R dev_user:dev_user /app

# è¤‡è£½requirements.txtä¸¦å®‰è£Pythonä¾è³´
COPY requirements.txt .

# å®‰è£é–‹ç™¼ä¾è³´
RUN echo "# é–‹ç™¼ç’°å¢ƒé¡å¤–ä¾è³´" >> requirements.dev.txt && \
    echo "watchdog==3.0.0" >> requirements.dev.txt && \
    echo "python-multipart==0.0.6" >> requirements.dev.txt && \
    echo "pytest==7.4.4" >> requirements.dev.txt && \
    echo "pytest-asyncio==0.23.2" >> requirements.dev.txt && \
    echo "black==23.12.1" >> requirements.dev.txt && \
    echo "flake8==6.1.0" >> requirements.dev.txt

RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt && \
    pip install --no-cache-dir -r requirements.dev.txt

# åˆ‡æ›åˆ°é–‹ç™¼ç”¨æˆ¶
USER dev_user

# æš´éœ²ç«¯å£
