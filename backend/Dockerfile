# ğŸ•ï¸ èŸ¬èªªéœ²ç‡Ÿå€ç®¡ç†ç³»çµ± - å¾Œç«¯Dockeré…ç½®
FROM python:3.11.9-slim

# è¨­ç½®å·¥ä½œç›®éŒ„
WORKDIR /app

# è¨­ç½®ç’°å¢ƒè®Šé‡
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PORT=8000 \
    TZ=Asia/Taipei

# å®‰è£ç³»çµ±ä¾è³´å’Œæ™‚å€è¨­ç½®
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    curl \
    tzdata \
    && ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && echo $TZ > /etc/timezone \
    && rm -rf /var/lib/apt/lists/*

# å‰µå»ºæ‡‰ç”¨ç”¨æˆ¶å’Œç›®éŒ„
RUN useradd --create-home --shell /bin/bash app_user && \
    mkdir -p /app/logs /app/uploads && \
    chown -R app_user:app_user /app

# è¤‡è£½requirements.txtä¸¦å®‰è£Pythonä¾è³´
COPY requirements.txt .
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# è¤‡è£½æ‡‰ç”¨ä»£ç¢¼
COPY --chown=app_user:app_user app/ ./app/
COPY --chown=app_user:app_user database/ ./database/
COPY --chown=app_user:app_user data/ ./data/

# åˆ‡æ›åˆ°érootç”¨æˆ¶
USER app_user

# æš´éœ²ç«¯å£
EXPOSE $PORT

# å¥åº·æª¢æŸ¥
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD curl -f http://localhost:$PORT/health || exit 1

# å•Ÿå‹•å‘½ä»¤
CMD ["sh", "-c", "cd app && uvicorn main:app --host 0.0.0.0 --port $PORT --workers 1"]
